{
  "name": "bookmark-generator",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:unit": "vitest run --config vitest.config.ts --reporter=verbose",
    "test:integration": "vitest run --config vitest.integration.config.ts --reporter=verbose",
    "test:e2e": "vitest run --config vitest.e2e.config.ts --reporter=verbose",
    "test:e2e:playwright": "playwright test",
    "test:e2e:playwright:headed": "playwright test --headed",
    "test:e2e:playwright:ui": "playwright test --ui",
    "test:a11y": "vitest run --config vitest.a11y.config.ts --reporter=verbose",
    "test:performance": "vitest run --config vitest.performance.config.ts --reporter=verbose",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:a11y && npm run test:performance",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:coverage:all": "npm run test:unit -- --coverage && npm run test:integration -- --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "quality:check": "npm run type-check && npm run lint && npm run format:check && npm run test:all"
  },
  "dependencies": {
    "@react-three/drei": "^10.6.1",
    "@react-three/fiber": "^9.3.0",
    "@tailwindcss/vite": "^4.1.11",
    "@types/three": "^0.178.1",
    "clsx": "^2.1.1",
    "lodash-es": "^4.17.21",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "three": "^0.178.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@playwright/test": "^1.54.2",
    "@tailwindcss/forms": "^0.5.10",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.7.8",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "axe-core": "^4.10.2",
    "canvas": "^3.1.2",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest-dom": "^5.4.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-testing-library": "^7.4.1",
    "globals": "^16.3.0",
    "happy-dom": "^15.11.6",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.2.10",
    "playwright": "^1.51.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.11",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4",
    "vitest": "^3.2.4",
    "vitest-axe": "^0.1.0"
  },
  "description": "This template provides a minimal setup to get React working in Vite with HMR and some ESLint rules.",
  "main": "eslint.config.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Daniel-Wu/bookmark-generator.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Daniel-Wu/bookmark-generator/issues"
  },
  "homepage": "https://github.com/Daniel-Wu/bookmark-generator#readme"
}
